<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grievances"
        android:textSize="35sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="We&apos;d love to hear from you! Leave a message below and we will get  in touch with you shortly."
            android:id="@+id/textView2"
            android:layout_gravity="center"
            android:textSize="17dp"
            android:textColor="#0000ff" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:        "
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:textColor="#000000" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/g_name_et"
            android:hint="Jhon Doe" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone:        "
            android:id="@+id/textView5"
            android:textSize="20dp"
            android:textColor="#000000" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/g_num_et"
            android:hint="123-456-7890" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Grievance Type:"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="#000000"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/g_spinner">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message:   "
            android:id="@+id/textView7"
            android:textColor="#000000"
            android:textSize="20dp" />

        <EditText
            android:layout_width="213dp"
            android:layout_height="85dp"
            android:id="@+id/g_query_et"
            android:hint="Enter your Message." />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp">

        <Button
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/g_btn"
            android:layout_gravity="center_horizontal"
            android:background="#a7befa" />
    </LinearLayout>
</LinearLayout>